{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <a class="btn btn-primary pull-right" href="{{ path('customer_new') }}"><i class="fa fa-plus"></i> Create a new customer</a>
        <h1><i class="fa fa-group"></i> Customers list</h1>
    </div>

    <table id="dataTable" class="table table-bordered table-stripped">
        <thead class="thead-default">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Dob</th>
                <th>Account</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td><a href="{{ path('customer_show', { 'id': customer.id }) }}">{{ customer.id }}</a></td>
                <td>{{ customer.name }} {{ customer.lastname }}</td>
                <td>{{ customer.address }}</td>
                <td>{% if customer.dob %}{{ customer.dob|date('Y-m-d') }}{% endif %}</td>
                <td>
                    {% if customer.account is not null %}
                    <a class="btn btn-link" href="{{ path('account_show',{ 'id' : customer.account.id }) }}">{{ customer.account.number }} <i class="fa fa-link"></i></a>
                    {% else %}
                        No Account
                    {% endif %}
                </td>
                <td>
                    <a class="btn btn-sm btn-default" href="{{ path('customer_show', { 'id': customer.id }) }}"><i class="fa fa-eye"></i> show</a>
                    <a class="btn btn-sm btn-default" href="{{ path('customer_edit', { 'id': customer.id }) }}"><i class="fa fa-edit"></i> edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
