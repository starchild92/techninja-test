{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <a class="btn btn-default pull-right" href="{{ path('customer_index') }}"><i class="fa fa-arrow-left"></i> Back to the list</a>
        <h1><i class="fa fa-user"></i> Customer</h1>
    </div>

    <div class="col-lg-12">
        <h2 class="text-info">User Detailed Information <i class="fa fa-info pull-right"></i></h2>
    </div>
    <div class="col-lg-6">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ customer.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ customer.name }} {{ customer.lastname }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ customer.address }}</td>
                </tr>
                <tr>
                    <th>Date of birth</th>
                    <td>{% if customer.dob %}{{ customer.dob|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Bank details</th>
                    <td>{{ customer.bank.name }}</td>
                </tr>
                <tr>
                    <th>Account details</th>
                    <td>{{ customer.account.number }} | {{ customer.account.type }}</td>
                </tr>
            </tbody>
        </table>
            <a class="btn btn-success" href="{{ path('customer_edit', { 'id': customer.id }) }}"><i class="fa fa-edit"></i> Edit</a>
            {{ form_start(delete_form, {'attr' : { 'class' : 'form-delete' }}) }}
                <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete </button>
            {{ form_end(delete_form) }}
    </div>
    <div class="col-lg-6">
        <div class="panel panel-success">
            <div class="panel-heading">Balance movemnts</div>
            <div class="panel-body">in a none distant future you will be able to see here the movents related to you saving account</div>
        </div>
    </div>
{% endblock %}
