{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bank</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bank.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ bank.code }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ bank.address }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bank_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bank_edit', { 'id': bank.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
